{
  "compilerOptions": {
    "target": "ESNext",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "strict": true,

    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "types": [
      "@extpkg/types-console",
      "@extpkg/types-runtime",
      "@extpkg/types-tabs",
      "@extpkg/types-webviews",
      "@extpkg/types-windows",
      "@extpkg/types-websessions"
    ]
  },
  "include": ["./ext/main.ts", "./source/src/main.tsx"],
  "exclude": ["node_modules", "dist"],
}
